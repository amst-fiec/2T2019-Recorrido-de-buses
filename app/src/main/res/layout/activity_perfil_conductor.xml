<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".perfil_conductor">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Registrar Datos"
        android:textAlignment="center"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:text="Informacion bus"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/edit_capacidadBus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="319dp"
        android:layout_height="40dp"
        android:layout_marginBottom="16dp"
        android:text="Informacion Conductor"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/edit_nombre_conductor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edit_nombre_conductor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="40dp"
        android:background="@drawable/edit_text_bottom"
        android:ems="10"
        android:hint="NombreConductor"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textColor="#030303"
        android:textColorHint="#757070"
        app:layout_constraintBottom_toTopOf="@+id/edit_edad_conductor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edit_edad_conductor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="56dp"
        android:background="@drawable/edit_text_bottom"
        android:ems="10"
        android:hint="Edad Conductor"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textColor="#030303"
        android:textColorHint="#757070"
        app:layout_constraintBottom_toTopOf="@+id/btn_guardar_datos_conductor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.489"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edit_placaBus"
        android:layout_width="218dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edit_text_bottom"
        android:ems="10"
        android:hint="Placa Bus"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textColor="#030303"
        android:textColorHint="#757070"
        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/edit_capacidadBus"
        android:layout_width="218dp"
        android:layout_height="52dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/edit_text_bottom"
        android:ems="10"
        android:hint="Capacidad mÃ¡xima Bus"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textColor="#030303"
        android:textColorHint="#757070"
        app:layout_constraintBottom_toTopOf="@+id/etxt_Nruta"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.507"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etxt_Nruta"
        android:layout_width="218dp"
        android:layout_height="52dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/edit_text_bottom"
        android:ems="10"
        android:hint="Nombre de Ruta"
        android:inputType="textPersonName"
        android:padding="15dp"
        android:textColor="#030303"
        android:textColorHint="#757070"
        app:layout_constraintBottom_toTopOf="@+id/edit_placaBus"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.512"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btn_guardar_datos_conductor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="52dp"
        android:text="Guardar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>