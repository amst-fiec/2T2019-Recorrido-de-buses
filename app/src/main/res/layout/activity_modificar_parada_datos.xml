<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ModificarParada_datos">

    <Button
        android:id="@+id/btn_modify_parada"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="176dp"
        android:gravity="center"
        android:text="Modificar datos"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent" />

    <EditText
        android:id="@+id/etxt_new_latitud"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txt_parada"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="112dp"
        android:background="@drawable/button"
        android:hint="Latitud (-78.2356)"
        android:padding="15dp"
        android:textColor="#F80E0D0D"
        android:textColorHint="#928E8D"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_parada" />

    <EditText
        android:id="@+id/etxt_new_longitud"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etxt_nueva_latitud"
        android:layout_alignBottom="@+id/miChildView"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="60dp"
        android:background="@drawable/button"
        android:hint="Longitud (-23.2355)"
        android:padding="15dp"
        android:textColor="#F80E0D0D"
        android:textColorHint="#928E8D"
        app:layout_constraintBottom_toTopOf="@+id/btn_modify_parada"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/etxt_new_latitud"
        app:layout_constraintVertical_bias="0.962" />

    <TextView
        android:id="@+id/txt_parada"
        android:layout_width="168dp"
        android:layout_height="54dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="120dp"
        android:gravity="center"
        android:text="PARADA"
        android:textAlignment="center"
        android:textSize="35sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>